<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <img class="headerImage" src="../assets/images/winePhoto.jpg" width="50%">
            <h1 class="text-center">Drink-A-Wine</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <h2 class="text-center">Unopened</h2>
            <ul class="card">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-lg-6">
            <h2 class="text-center">Drank</h2>
            <ul class="card">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-12 text-center">
            <h2>Add a Wine</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca"></label>
                    <input type="text" id="ca" name="burger_name">
                </div>

                <button class="btn btn-outline-primary" type="submit">Add Wine</button>
            </form>
        </div>

    </div>
</div>